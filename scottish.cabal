                     , mtl           >=2.1     && <2.2
                     , persistent    >=1.3     && <1.4
                     , resource-pool >=0.2     && <0.3
                     , scotty        >=0.6     && <0.8
                     , stm           >=2.4     && <2.5
                     , text          >=1.0     && <1.1
                     , transformers  >=0.3     && <0.4
                     , wai           >=2.0     && <2.2
                     , warp          >=2.0.3.3 && <2.2
  hs-source-dirs:      src
  default-language:    Haskell2010
